{
  "manifest_version": 3,
  "name": "Eureka AI",
  "version": "1.0.0",
  "description": "Chat Workflow Sidebar for Learners",
  "author": "Your Name",
  "homepage_url": "https://your-website.com",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://api.openai.com/*",
    "https://*.onrender.com/*",
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.openai.com https://sumvid-learn-backend.onrender.com https://*.onrender.com"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon48.png",
        "Source/StickyButton.js",
        "Source/LoginMenu.js",
        "Source/SettingsPanel.js",
        "Source/usageTracker.js",
        "Source/ContentExtractor.js",
        "Source/PDFExtractor.js",
        "Source/Sidechat.js",
        "Source/SelectionToolbar.js",
        "Source/NotesManager.js",
        "Source/FlashcardMaker.js",
        "Source/ChatManager.js",
        "Source/ContentGenerator.js",
        "Source/TabManager.js",
        "Source/UsageManager.js",
        "Source/FileManager.js",
        "Source/ContentDisplayManager.js",
        "Source/ButtonHandlers.js",
        "Source/InfoDialogsManager.js",
        "Source/UIController.js",
        "Source/FlashcardUIController.js",
        "Source/NotesUIController.js",
        "Source/ClarifyHandler.js",
        "styles/StickyButton.css",
        "styles/LoginMenu.css",
        "styles/SettingsPanel.css",
        "styles/Sidechat.css",
        "styles/SelectionToolbar.css",
        "styles/NotesManager.css",
        "styles/FlashcardMaker.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Eureka AI"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "Source/SelectionToolbar.js", "Source/StickyButton.js"],
      "css": ["styles/SelectionToolbar.css", "styles/StickyButton.css"],
      "run_at": "document_idle"
    }
  ]
}
